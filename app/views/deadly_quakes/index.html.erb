<p id="notice"><%= notice %></p>

<h1>Deadly Earthquakes</h1>

<%= form_tag(deadly_quakes_path, method: :get) do %>
  <%= date_field( nil, "term", value:  params[:term]) %>
  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>EqCode</th>
      <th>Date</th>
      <th>Location</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Deaths</th>
      <th>Magnitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deadly_quakes.each do |deadly_quake| %>
      <tr>
        <td><%= deadly_quake.EqCode %></td>
        <td><%= deadly_quake.Date %></td>
        <td><%= deadly_quake.Location %></td>
        <td><%= deadly_quake.Longitude %></td>
        <td><%= deadly_quake.Latitude %></td>
        <td><%= deadly_quake.Deaths %></td>
        <td><%= deadly_quake.Magnitude %></td>
        <td><%= link_to 'Details', deadly_quake %></td>
      </tr>
    <% end %>
  </tbody>
</table>

