
<div id="chart" style="width:100%; height:400px;"></div>

 
<script type="text/javascript">
$(function () { 
    var myChart = Highcharts.chart('chart', {
            chart: {   
			   type: 'areaspline'	  
            },
            title: {
               text: 'Tsunami deaths over time'   
            }, 
            xAxis: {
				labels:
				{
					enabled: false
				},
               title: { 
				  text: 'Year'
			   },
			   
            },
            yAxis: {
               title: {
                  text: 'Deaths'
               }
            },
            tooltip: {
               shared: true,
               valueSuffix: ' units'
            },
            series: [
               {
				  showInLegend: false, 
                  name: 'Deaths',
                  data: <%=raw @tsunami_count %>
               }
            ]
    });
});
</script>