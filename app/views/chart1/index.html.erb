
<div id="chart" style="width:100%; height:400px;"></div>

<%= form_tag(chart1_path, method: :get, class: "form-inline my-2 my-lg-0") do %>
  <%= date_field( nil, "term", value:  params[:term], class: "form-control form-control-lg mr-sm-2") %>
  <%= submit_tag('Search', class: "btn btn-lg btn-secondary my-2 my-sm-0") %>
<% end %>
<br><br>
 
<script type="text/javascript">
$(function () { 
    var myChart = Highcharts.chart('chart', {
        chart: {
            type: 'bar'
        },
        title: {
            text: 'Calamities by date'
        },
        xAxis: {
            categories: ['Deadly Earthquakes', 'Earthquakes', 'Tsunamis']
        },
        yAxis: {
            title: {
                text: 'Calamities happened'
            }
        },
        series: [{
			showInLegend: false,  
            name: 'Total',
            data: [<%=raw @deadly_count %>, <%=raw @earthquake_count %>, <%=raw @tsunami_count %>]
        }]
    });
});
</script>